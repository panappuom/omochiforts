{
  "images": {
    "smallWidth": 236,
    "largeWidth": 1200,
    "qualitySmall": 82,
    "qualityLarge": 88,
    "rebuildIfNewer": true,
    "outputDir": "public/assets"
  },
  "layout": {
    "gap": { "sp": { "x": 4, "y": 4 }, "pc": { "x": 16, "y": 16 } },
    "tabs": { "align": "center" },
    "breakpoint": "768px",
    "grid": {
      "base": 2,
      "bp": [
        { "min": "768px",  "cols": 3 },
        { "min": "1024px", "cols": 5 }
      ]
    }
  },
  "gallery": {
    "insertAdEvery": 20,
    "lqip": true,
    "infinite": { "batch": 60, "preRenderBatches": 2 }
  },
  "search": {
    "mode": "AND",
    "orDelimiter": "|",
    "debounceMs": 80
  },
  "theme": { "dark": "system" },
  "icon": "/favicon.svg",
  "branding": {
    "title": "My Illustration Gallery",
    "icon": "/icon.svg"
  }
}
