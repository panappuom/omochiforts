{
  "images": {
    "originalsDir": "originals/originals_upscaled", 
    "outputDir": "src/assets",     
    "publicDir": "public/assets",    
    "smallWidth": 236,
    "small2x": 472,
    "largeWidth": 1200,
    "large2x": 2400,
    "qualitySmall": 72,
    "qualityLarge": 82,
    "rebuildIfNewer": true,
    "formats": ["avif","webp"],
    "lqip": { "enabled": true, "size": 24, "quality": 50 }
  },
  "layout": {
    "gap": { "sp": { "x": 4, "y": 4 }, "pc": { "x": 16, "y": 16 } },
    "tabs": { "align": "center" },
    "breakpoint": "768px",
    "grid": {
      "base": 2,
      "bp": [
        { "min": "768px",  "cols": 3 },
        { "min": "1024px", "cols": 5 }
      ]
    }
  },
  "gallery": {
    "insertAdEvery": 20,
    "lqip": true,
    "infinite": { "batch": 60, "preRenderBatches": 2 }
  },
  "upscale": {
    "root": "D:/project/omochiforts/originals",
    "srcDir": "D:/project/omochiforts/originals/originals_lowres",
    "dstDir": "D:/project/omochiforts/originals/originals_upscaled",
    "targetUpscaled": 2000,
    "minForEasy": 960,
    "minForHard": 250,
    "realesrgan": {
      "modelName": "realesr-animevideov3-x2",
      "tile": 256,
      "format": "png",
      "flattenBefore": true,
      "blackThreshold": 0.01
    },
    "debug": {
      "keepTemp": true,
      "detectBlack": true,
      "dir": "D:/project/omochiforts/originals/debug_upscale"
    }
  },
  "search": {
    "mode": "AND",
    "orDelimiter": "|",
    "debounceMs": 80
  },
  "theme": { "dark": "system" },
  "icon": "/favicon.svg",
  "branding": {
    "title": "My Illustration Gallery",
    "icon": "/icon.svg"
  }
}
